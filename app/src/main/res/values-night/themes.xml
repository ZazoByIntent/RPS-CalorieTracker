<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RPSCalorieTracker.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorDark</item>
        <item name="colorPrimaryVariant">@color/colorDarkVariant</item>
        <item name="colorOnPrimary">@color/themeDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorDark</item>
        <item name="colorSecondaryVariant">@color/colorDarkVariant</item>
        <item name="colorOnSecondary">@color/themeDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorDark</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
    </style>
    <style name="Textview">
        <item name="android:textColor">@color/colorDarkVariant</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardView_theme">
        <item name="cardBackgroundColor">@color/colorDarkVariant</item>
    </style>
    <style name="CardView_text">
        <item name="android:textColor">@color/themeDark</item>
    </style>
    <style name="CardView_backgroud">
        <item name="android:background">@color/colorDark</item>
    </style>
</resources>